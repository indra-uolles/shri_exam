module "multi_column_links"

match / {
    for .item   {
    	<div class="one-multi-col">
    		for .* {
    			display_element()
    		}
      	</div>
       }
}

func display_element() {
    if (.type == 'header') {
        <h4>{ .content }</h4>
    } else {
    	<p><a href="{ .link }">{ .title }</a></p>
    }
 }